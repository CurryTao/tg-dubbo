		</dependency>
		<dependency>
			<groupId>org.apache.activemq</groupId>
			<artifactId>activemq-all</artifactId>
			<version>5.13.4</version>
		</dependency>


	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<!-- 鎸囧畾绔彛 -->
					<port>9005</port>
					<!-- 璇锋眰璺緞 -->
					<path>/</path>
				</configuration>
			</plugin>
		</plugins>
		<finalName>tg-page-service</finalName>
